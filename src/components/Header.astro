---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Icon } from 'astro-icon/components'
---

<header class=" bg-zinc-800 shadow-md">
    <nav class="container mx-auto p-4 flex items-center justify-between">
        <h1 class="font-black uppercase text-3xl flex items-center">
            <a class="text-white flex items-center" href="/">
                <img src="../../logo_white.png" alt="Logo" class="h-16 w-auto mr-2"/>
                {SITE_TITLE}
            </a>
        </h1>
        <div class="hidden lg:flex space-x-4">
            <HeaderLink href="/">NEWS</HeaderLink>
            <HeaderLink href="/archive">ARCHIVE</HeaderLink>
            <HeaderLink href="/about">ABOUT</HeaderLink>
        </div>
        <div class="hidden lg:flex space-x-4">
            <a href="https://github.com/LinkTheCoder" target="_blank">
                <Icon name="github" class="text-4xl" />
            </a>
        </div>
        <!-- Mobile menu button-->
        <div class="lg:hidden">
            <button id="menu-button" class="focus:outline-none">
                <Icon name="bars" class="text-4xl" />
            </button>
        </div>
    </nav>
    <!-- Mobile menu-->
    <div id="mobile-menu" class="hidden lg:hidden items-center justify-center"> <!-- Updated this line -->
        <div class="p-4 space-y-4 flex flex-col items-center"> <!-- Modified this line -->
            <HeaderLink href="/">NEWS</HeaderLink>
            <HeaderLink href="/archive">ARCHIVE</HeaderLink>
            <HeaderLink href="/about">ABOUT</HeaderLink>
            <div class="flex space-x-4">
                <a href="https://github.com/withastro/astro" target="_blank">
                    <Icon name="github" class="text-3xl" />
                </a>
            </div>
        </div>
    </div>
</header>

<script>
    const menuButton = document.getElementById('menu-button')!;
    const mobileMenu = document.getElementById('mobile-menu') as HTMLDivElement;

    menuButton.addEventListener('click', () => {
        if (mobileMenu) {
            mobileMenu.classList.toggle('hidden');
        }
    });
</script>
