---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="bg-white shadow-md">
    <nav class="container mx-auto p-4 flex items-center justify-between">
        <h1 class="font-black uppercase text-3xl flex items-center">
            <a class="text-black flex items-center" href="/">
                <img src="../../logo.png" alt="Logo" class="h-16 w-auto mr-2"/>
                {SITE_TITLE}
            </a>
        </h1>
        <div class="hidden md:flex space-x-4">
            <HeaderLink href="/">NEWS</HeaderLink>
            <HeaderLink href="/archive">ARCHIVE</HeaderLink>
            <HeaderLink href="/about">ABOUT</HeaderLink>
        </div>
        <div class="hidden md:flex space-x-4">
            <a href="https://github.com/LinkTheCoder" target="_blank">
                <span class="sr-only">Link's GitHub</span>
                <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" class="text-gray-800"><path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path></svg>
            </a>
        </div>
        <!-- Mobile menu button-->
        <div class="md:hidden">
            <button id="menu-button" class="text-gray-800 focus:outline-none">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </button>
        </div>
    </nav>
    <!-- Mobile menu-->
    <div id="mobile-menu" class="hidden md:hidden items-center justify-center"> <!-- Updated this line -->
        <div class="p-4 space-y-4 flex flex-col items-center"> <!-- Modified this line -->
            <HeaderLink href="/">NEWS</HeaderLink>
            <HeaderLink href="/archive">ARCHIVE</HeaderLink>
            <HeaderLink href="/about">ABOUT</HeaderLink>
            <div class="flex space-x-4">
                <a href="https://github.com/withastro/astro" target="_blank" class="text-gray-800">
                    <span class="sr-only">Go to Astro's GitHub repo</span>
                    <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" class="text-gray-800"><path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path></svg>
                </a>
            </div>
        </div>
    </div>
</header>

<script>
    const menuButton = document.getElementById('menu-button')!;
    const mobileMenu = document.getElementById('mobile-menu') as HTMLDivElement;

    menuButton.addEventListener('click', () => {
        if (mobileMenu) {
            mobileMenu.classList.toggle('hidden');
        }
    });
</script>
